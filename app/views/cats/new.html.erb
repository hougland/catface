<h1>Add a Cat</h1>

<%= form_for @cat do |f| %>
  <fieldset>
    <legend>Create Cat</legend>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :color %>
    <%= f.text_field :color %>
    <%= f.label :tail_length %>
    <%= f.number_field :tail_length %>
    <%= f.label :personality %>
    <%= f.text_field :personality %>
    <%= f.label :outdoor? %>
    <%= f.check_box :outdoor %>
    <%= f.label :occupation %>
    <%= f.text_field :occupation %>
    <%= f.hidden_field :owner_id, :value => params[:owner_id] %>
    <%= f.submit %>

  </fieldset>
<% end %>
