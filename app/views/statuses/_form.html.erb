<%= form_for @status, :url => {:controller => 'statuses', :action => action } do |f| %>
  <fieldset>
    <legend><%= legend %> Status</legend>

    <%= f.label :status %>
    <%= f.text_field :status %>
    <%= f.hidden_field :owner_id, :value => params[:owner_id] %>
    <%= f.hidden_field :cat_id, :value => params[:cat_id] %>
    <%= f.submit %>

  </fieldset>
<% end %>
